<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="1"
        android:toDegrees="360"
        android:duration="1000"
        android:repeatCount="-1"
        android:pivotX="50%"
        android:pivotY="50%" />
    <alpha android:fromAlpha="0.4"
        android:toAlpha="1"
        android:duration="500"
        android:repeatMode="reverse"
        android:repeatCount="-1"></alpha>
    <scale android:duration="500" android:repeatCount="-1" android:fromXScale="1" android:fromYScale="1" android:toXScale="1.05" android:toYScale="1.05" android:pivotX="50%" android:pivotY="50%" android:repeatMode="reverse"></scale>
</set>