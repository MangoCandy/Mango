<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              tools:context="com.ydwj.Setting.Setting">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:background="@mipmap/setting_bg"
                android:layout_width="fill_parent"
                android:layout_height="200dp">
            <com.ydwj.Utils.CircleImageView
                android:layout_centerInParent="true"
                android:id="@+id/set_head"
                android:background="@drawable/circle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_color="#fff"
                app:civ_border_width="5dp"
                    />
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/set_head"
                    android:textColor="#fff"
                    android:id="@+id/set_username"
                    android:text="请先登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
                android:clickable="true"
                android:background="#efefef"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical">
            <LinearLayout
                    android:clickable="true"
                    android:background="@drawable/btn_border"
                    android:layout_marginTop="10dp"
                    android:id="@+id/delete_cache"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iconfont_qingchu"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空缓存"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/loginTool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:clickable="true"
                    android:background="@drawable/btn_border"
                    android:layout_marginTop="10dp"
                    android:id="@+id/editPwd"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iconfont_editpwd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改密码"/>
                </LinearLayout>
                <LinearLayout
                    android:clickable="true"
                    android:background="@drawable/btn_border"
                    android:id="@+id/editUser"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iconfont_userinfo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户信息"/>
                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:background="@drawable/btn_border"
                    android:id="@+id/exit_login"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iconfont_logout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
