<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ydwj.alarm.Frg_alarm">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/toolbartext"
            android:text="一键报警"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:visibility="gone"
        android:id="@+id/toplayout"
        android:background="#ffffa12d"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
                android:id="@+id/toptext"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                android:text="请先登录"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50181012"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="20dp"
            android:background="@drawable/btn_circle_pink"
            android:id="@+id/img_anim"
            android:layout_centerInParent="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="长按报警"
            />
        <ImageView
            android:background="@drawable/btn_alarm"
            android:id="@+id/btn_if_alarm"
            android:layout_centerInParent="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="长按报警"
            />
        <ImageView
            android:id="@+id/ready0"
            android:layout_centerInParent="true"
            android:src="@mipmap/iconfont_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_above="@+id/go_to_editcontacts"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#565656"
            android:id="@+id/tips_1"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:text="长按发送紧急信息及打开功能区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_if_alarm"/>
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#e3b71a22"
            android:layout_marginTop="10dp"
            android:text="请谨慎使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tips_1"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/go_to_editcontacts"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_edit_contacts">
        <TextView
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看或编辑紧急联系人"/>
    </RelativeLayout>
</RelativeLayout>
