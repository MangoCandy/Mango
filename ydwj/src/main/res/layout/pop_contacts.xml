<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4d393939"></LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/xian"
        android:id="@+id/layout_showcontacts"
        android:layout_above="@+id/layout_send"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:scrollbars="none"
                android:divider="#00000000"
                android:dividerHeight="20dp"
                android:id="@+id/pop_showcontact"
                android:layout_centerVertical="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"></ListView>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:layout_margin="5dp"
                    android:id="@+id/btn_dismiss_cpop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    app:backgroundTint="#fff"
                    android:src="@mipmap/iconfont_close"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bottom_backgroud"
        android:id="@+id/layout_send"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tips_who"
            android:text="全体发送"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@id/tips_who"
            android:minHeight="40dp"
            android:id="@+id/edit_send"
            android:maxHeight="100dp"
            android:layout_toLeftOf="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#fff"
            android:background="@drawable/register_button"
            android:layout_alignBottom="@+id/edit_send"
            android:id="@+id/btn_send"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="发送"/>
    </RelativeLayout>
</RelativeLayout>