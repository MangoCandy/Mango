<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                >
    <com.ydwj.Utils.CircleImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/com_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#1b000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />
    <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/com_img"
            android:layout_toRightOf="@id/com_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/show_comName"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="1"
                android:id="@+id/show_comText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:textColor="#ff347bcd"
                android:text="1"
                android:id="@+id/show_comName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="1"
                android:layout_alignParentRight="true"
                android:id="@+id/show_comDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>