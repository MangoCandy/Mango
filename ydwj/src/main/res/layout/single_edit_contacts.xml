<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_single_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!--<ImageView-->
        <!--android:id="@+id/single_contact_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/btn_single_contacts"/>-->
    <LinearLayout
        android:background="@drawable/btn_click"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/name_head"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <com.ydwj.Utils.CircleImageView
                android:id="@+id/name_head_bg"
                android:background="#942158"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/name_head_text"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:id="@+id/single_contact_name"
                android:text="姓名"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignLeft="@id/single_contact_name"
                android:id="@+id/single_contact_num"
                android:layout_centerVertical="true"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:text="15111225564"
                android:layout_width="wrap_content" />
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/single_contact_beizhu"
                android:text="asd"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>